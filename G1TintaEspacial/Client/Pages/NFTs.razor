<main>
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach(var Item in nFTs)
            {
                <div class="animate__animated animate__zoomIn animate__delay-7s">
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="amongasito.jpg" />
                            <div class="card-body">

                                <h4 class="card-title"> @Item.NombreObra </h4>
                                <p class="card-text"> @Item.Descripcion</p>
                                <p class="card-text">$ @Item.Precio</p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <MatButton Raised="true" OnClick="@RunOnClick" Label="@Item.Autor"></MatButton>
                                        @*<h5 class="card-text">Juancitoperez132</h5>*@
                                    </div>
                                    <MatButton Icon="credit_card" Raised="true" OnClick="@RunOnClick" Label="comprar"></MatButton>
                                </div>
                                <small class="text-muted">@Item.Token</small>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</main>

